// The yaml file does not allow validation for Array fields.
// Therefore we add validation as a part of the encoding process.
aspects := obj["aspects"]
if aspects != nil {
	_, errs := NumberOfEntryLinkAspectsValidation(aspects, "aspects")

	if len(errs) > 0 {
		var msgs []string
		for _, e := range errs {
			msgs = append(msgs, e.Error())
		}
		return nil, fmt.Errorf("aspects validation failed: %s", strings.Join(msgs, "; "))
	}
}

err := TransformEntryLinkAspects(obj)

if err != nil {
	return nil, err
}

return obj, nil